{
  "name": "simplecrawler-app",
  "description": "The GUI for Simplecrawler",
  "version": "0.1.0",
  "homepage": "https://simplecrawler.app",
  "private": true,
  "main": "server",
  "keywords": [
    "crawler",
    "simplecrawler",
    "spider"
  ],
  "license": "MIT",
  "author": {
    "name": "Konstantin Bychkov",
    "email": "hello@kbychkov.com"
  },
  "contributors": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/kbychkov/simplecrawler-app.git"
  },
  "bugs": {},
  "directories": {
    "lib": "server",
    "test": "test/",
    "config": "config/"
  },
  "engines": {
    "node": "^10.0.0",
    "npm": ">= 3.0.0"
  },
  "scripts": {
    "postinstall": "cd client && npm install",
    "test": "npm run eslint && npm run mocha",
    "eslint": "eslint server/. test/. --config .eslintrc.json",
    "client": "cd client && npm start",
    "server": "nodemon --watch server server/",
    "dev": "concurrently --kill-others \"npm:server\" \"npm:client\"",
    "start": "cd client && npm run build && cd .. && node server/",
    "mocha": "cross-env NODE_ENV=test mocha test/ --recursive --exit",
    "update-version": "node -e \"console.log('module.exports = \\'' + require('./package.json').version + '\\';')\" > client/src/version.js"
  },
  "dependencies": {
    "@feathersjs/configuration": "^2.0.6",
    "@feathersjs/errors": "^3.3.6",
    "@feathersjs/express": "^1.3.1",
    "@feathersjs/feathers": "^3.3.1",
    "@feathersjs/socketio": "^3.2.9",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "feathers-hooks-common": "^4.20.7",
    "feathers-mongodb": "^5.0.0",
    "helmet": "^3.20.1",
    "mongodb": "^3.3.2",
    "mongodb-core": "^3.2.7",
    "search-query-parser": "^1.5.3",
    "serve-favicon": "^2.5.0",
    "shortid": "^2.2.14",
    "simplecrawler": "^1.1.8",
    "simplecrawler-mongo-queue": "^1.0.0",
    "validator": "^11.1.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@feathersjs/socketio-client": "^1.2.1",
    "@pptr/testserver": "^0.5.0",
    "concurrently": "^4.1.2",
    "cross-env": "^5.2.0",
    "eslint": "^6.2.1",
    "mime": "^2.4.4",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "socket.io-client": "^2.2.0"
  }
}
